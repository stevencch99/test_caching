<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @author.name %>
</p>

<p>
  <strong>Total books: <%= @author.books.size %></strong>
</p>
<table>
  <thead>
    <tr>
      <th>Book ID</th>
      <th>Description</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
  <% @author.books.each do |book| %>
    <tr>
      <td><%= book.id %></td>
      <td><%= book.description %></td>
      <td><%= book.price %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<%= link_to 'Edit', edit_author_path(@author) %> |
<%= link_to 'Back', authors_path %>
<%= link_to 'Books', books_path %>
