<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Has books</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <% author_id = author['id'] %>
      <tr>
        <td><%= author['name'] %></td>
        <td><%#= author.name %></td>
        <td><%#= author.books.size %></td>
        <td><%= link_to 'Show', author_path(author_id) %></td>
        <td><%= link_to 'Edit', edit_author_path(author_id) %></td>
        <td><%#= link_to 'Edit', edit_author_path(author) %></td>
        <td><%= link_to 'Destroy', author_path(author_id), method: :delete, data: { confirm: "Deleting #{author['name']}, are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path %>
<%= link_to 'Books', books_path %>
